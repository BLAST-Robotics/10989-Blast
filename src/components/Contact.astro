---
// Contact component
---

<section id="contact" class="py-20 bg-base-200">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Get in Touch</h2>
      <p class="text-xl text-base-content/70 max-w-2xl mx-auto">
        Ready to transform your organization? Let's discuss how we can help you achieve your goals.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-2xl mb-6">Send us a Message</h3>
          <form class="space-y-6">
            <div class="grid md:grid-cols-2 gap-4">
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">First Name</span>
                </label>
                <input type="text" placeholder="John" class="input input-bordered w-full" />
              </div>
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">Last Name</span>
                </label>
                <input type="text" placeholder="Doe" class="input input-bordered w-full" />
              </div>
            </div>
            
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold">Email</span>
              </label>
              <input type="email" placeholder="john.doe@company.com" class="input input-bordered w-full" />
            </div>
            
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold">Company</span>
              </label>
              <input type="text" placeholder="Your Organization" class="input input-bordered w-full" />
            </div>
            
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold">Service Interest</span>
              </label>
              <select class="select select-bordered w-full">
                <option disabled selected>Select a service</option>
                <option>Digital Transformation</option>
                <option>Cloud Solutions</option>
                <option>Cybersecurity</option>
                <option>Data Analytics</option>
                <option>Consulting</option>
                <option>Other</option>
              </select>
            </div>
            
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold">Message</span>
              </label>
              <textarea class="textarea textarea-bordered h-32" placeholder="Tell us about your project requirements..."></textarea>
            </div>
            
            <div class="form-control">
              <button class="btn btn-primary btn-lg w-full">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="space-y-8">
        <!-- Contact Cards -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-2xl mb-6">Contact Information</h3>
            
            <div class="space-y-6">
              <!-- Office Address -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-lg">Head Office</h4>
                  <p class="text-base-content/70">
                    123 Innovation Drive<br>
                    Tech District, TD 12345<br>
                    United States
                  </p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-lg">Phone</h4>
                  <p class="text-base-content/70">
                    +1 (555) 123-4567<br>
                    +1 (555) 987-6543
                  </p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-lg">Email</h4>
                  <p class="text-base-content/70">
                    info@techflow.com<br>
                    sales@techflow.com
                  </p>
                </div>
              </div>

              <!-- Business Hours -->
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-success/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-lg">Business Hours</h4>
                  <p class="text-base-content/70">
                    Monday - Friday: 9:00 AM - 6:00 PM<br>
                    Saturday: 10:00 AM - 2:00 PM<br>
                    Sunday: Closed
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA Card -->
        <div class="card bg-gradient-to-br from-primary to-secondary text-primary-content shadow-xl">
          <div class="card-body text-center">
            <h3 class="card-title justify-center text-2xl mb-4">Ready to Get Started?</h3>
            <p class="mb-6 opacity-90">
              Schedule a free consultation to discuss your organization's technology needs.
            </p>
            <button class="btn btn-accent btn-lg">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Schedule Consultation
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
