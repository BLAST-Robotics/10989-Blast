---
// Hero component
---

<section id="home" class="hero min-h-screen" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('/team-photo.jpg'); background-size: cover; background-position: center;">
  <div class="hero-content text-center">
    <div class="max-w-4xl">
      <div class="mb-8">
        <img src="/Logo Transparent.png" alt="Blast Robotics Cool Logo" class="mx-auto h-32 w-32 mb-6" />
      </div>      <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white drop-shadow-lg">
        Welcome to Blast Robotics
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-white/90 drop-shadow-md">
        FRC Community Team serving Mainline Pennsylvania
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#contact" class="btn btn-primary btn-lg">Join Our Team</a>
        <a href="#features" class="btn btn-outline btn-lg">Learn More</a>
      </div>
        <!-- Feature badges -->
      <div class="flex flex-wrap justify-center gap-4 mt-12">
        <div class="badge badge-primary badge-lg p-4">
          <i class="bi bi-lightbulb mr-2 text-lg"></i>
          Innovation
        </div>
        <div class="badge badge-secondary badge-lg p-4">
          <i class="bi bi-people mr-2 text-lg"></i>
          Teamwork
        </div>
        <div class="badge badge-accent badge-lg p-4">
          <i class="bi bi-trophy mr-2 text-lg"></i>
          Excellence
        </div>
      </div>

      <!-- Join Us Graphics -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-16 max-w-2xl mx-auto">
        <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
          <figure class="px-4 pt-4">
            <img src="/Blast Robotics-10-Join 1.png" alt="Join Blast Robotics" class="rounded-lg w-full hover:scale-105 transition-transform" />
          </figure>
        </div>
        <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
          <figure class="px-4 pt-4">
            <img src="/Blast Robotics-11-Join 2.png" alt="Join Our Team" class="rounded-lg w-full hover:scale-105 transition-transform" />
          </figure>
        </div>
      </div>
    </div>
  </div>
</section>
