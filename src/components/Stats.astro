---
// Stats component
---

<section
    class="py-20 bg-base-100 text-base-content">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-4">
                Our Achievements
            </h2>
            <p class="text-xl opacity-90 max-w-2xl mx-auto">
                Numbers that showcase our commitment to excellence in FIRST
                Robotics Competition and STEM education.
            </p>
        </div>

        <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Stat 1 -->
            <div class="text-center">
                <div class="stat">
                    <div class="stat-value text-4xl md:text-6xl font-bold mb-2 text-primary">
                        10+
                    </div>
                    <div class="stat-title text-base-content text-lg font-semibold">
                        Adults
                    </div>
                    <div class="stat-desc text-base-content/60 mt-2">
                        Mentors and Volunteers
                    </div>
                </div>
            </div>

            <!-- Stat 2 -->
            <div class="text-center">
                <div class="stat">
                    <div class="stat-value text-4xl md:text-6xl font-bold mb-2 text-secondary">
                        1K+
                    </div>
                    <div class="stat-title text-base-content text-lg font-semibold">
                        Views
                    </div>
                    <div class="stat-desc text-base-content/60 mt-2">
                        Social Media Outreach
                    </div>
                </div>
            </div>

            <!-- Stat 3 -->
            <div class="text-center">
                <div class="stat">
                    <div class="stat-value text-4xl md:text-6xl font-bold mb-2 text-primary">
                        20+
                    </div>
                    <div class="stat-title text-base-content text-lg font-semibold">
                        Opportunities
                    </div>
                    <div class="stat-desc text-base-content/60 mt-2">
                        Roles and Responisbilites provided
                    </div>
                </div>
            </div>
            <!-- Stat 4 -->
            <div class="text-center">
                <div class="stat">
                    <div class="stat-value text-4xl md:text-6xl font-bold mb-2 text-secondary">
                        40+
                    </div>
                    <div class="stat-title text-base-content text-lg font-semibold">
                        Students
                    </div>
                    <div class="stat-desc text-base-content/60 mt-2">
                        People interested
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional metrics -->
        <div class="mt-16 grid md:grid-cols-3 gap-8">
            <div class="text-center p-6 bg-base-200 rounded-2xl border border-base-300 hover:border-primary/30 hover:shadow-lg transition-all duration-300">
                <div class="text-3xl font-bold mb-2 text-primary">$10K+</div>
                <div class="text-base-content/70">
                    Grants and Donations Earned
                </div>
            </div>
            <div class="text-center p-6 bg-base-200 rounded-2xl border border-base-300 hover:border-secondary/30 hover:shadow-lg transition-all duration-300">
                <div class="text-3xl font-bold mb-2 text-secondary">5 Teams</div>
                <div class="text-base-content/70">Local Teams In Partnership</div>
            </div>
            <div class="text-center p-6 bg-base-200 rounded-2xl border border-base-300 hover:border-primary/30 hover:shadow-lg transition-all duration-300">
                <div class="text-3xl font-bold mb-2 text-primary">Community</div>
                <div class="text-base-content/70">Focused Team Building</div>
            </div>
        </div>
    </div>
</section>
