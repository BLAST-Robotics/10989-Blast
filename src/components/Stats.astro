---
// Stats component
---

<section class="py-20 bg-gradient-to-r from-primary to-secondary text-primary-content">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Our Achievements</h2>
      <p class="text-xl opacity-90 max-w-2xl mx-auto">
        Numbers that showcase our commitment to excellence in FIRST Robotics Competition and STEM education.
      </p>
    </div>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Stat 1 -->
      <div class="text-center">
        <div class="stat">
          <div class="stat-value text-4xl md:text-6xl font-bold mb-2">10+</div>
          <div class="stat-title text-primary-content/80 text-lg">Years Competing</div>
          <div class="stat-desc text-primary-content/60 mt-2">Building robots since 2015</div>
        </div>
      </div>

      <!-- Stat 2 -->
      <div class="text-center">
        <div class="stat">
          <div class="stat-value text-4xl md:text-6xl font-bold mb-2">150+</div>
          <div class="stat-title text-primary-content/80 text-lg">Students Mentored</div>
          <div class="stat-desc text-primary-content/60 mt-2">Future engineers inspired</div>
        </div>
      </div>

      <!-- Stat 3 -->
      <div class="text-center">
        <div class="stat">
          <div class="stat-value text-4xl md:text-6xl font-bold mb-2">25+</div>
          <div class="stat-title text-primary-content/80 text-lg">Competition Awards</div>
          <div class="stat-desc text-primary-content/60 mt-2">Recognition for excellence</div>
        </div>
      </div>      <!-- Stat 4 -->
      <div class="text-center">
        <div class="stat">
          <div class="stat-value text-4xl md:text-6xl font-bold mb-2">95%</div>
          <div class="stat-title text-primary-content/80 text-lg">College Bound</div>
          <div class="stat-desc text-primary-content/60 mt-2">Alumni pursuing STEM degrees</div>
        </div>
      </div>
    </div>

    <!-- Additional metrics -->
    <div class="mt-16 grid md:grid-cols-3 gap-8">
      <div class="text-center p-6 bg-white/10 rounded-2xl backdrop-blur">
        <div class="text-3xl font-bold mb-2">50+ Robots</div>
        <div class="text-primary-content/80">Built & Competed</div>
      </div>
      <div class="text-center p-6 bg-white/10 rounded-2xl backdrop-blur">
        <div class="text-3xl font-bold mb-2">$100K+</div>
        <div class="text-primary-content/80">Scholarships Earned</div>
      </div>
      <div class="text-center p-6 bg-white/10 rounded-2xl backdrop-blur">
        <div class="text-3xl font-bold mb-2">5 States</div>
        <div class="text-primary-content/80">Competitions Attended</div>
      </div>
    </div>
  </div>
</section>
