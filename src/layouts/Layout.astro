---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import "../index.css";
import Analytics from '@vercel/analytics/astro'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Blast Robotics - Inspiring innovation through FIRST Robotics Competition" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<!-- Navigation -->
		<div class="navbar bg-base-100 shadow-lg sticky top-0 z-50">
			<div class="navbar-start">
				<div class="dropdown">					<div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
						<i class="bi bi-list text-xl"></i>
					</div><ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
						<li><a href="/">Home</a></li>
						<li><a href="/about">About</a></li>
						<li><a href="#features">Programs</a></li>
						<li><a href="#team">Team</a></li>
						<li><a href="#contact">Contact</a></li>
					</ul>
				</div>				<div class="flex items-center">
					<img src="/Blast Robotics-1-Logo Black Square.png" alt="Blast Robotics Logo" class="h-10 w-10 mr-2" />
					<a class="btn btn-ghost text-xl font-bold">Blast Robotics</a>
				</div>
			</div>
			<div class="navbar-center hidden lg:flex">				<ul class="menu menu-horizontal px-1">
					<li><a href="/" class="hover:text-primary">Home</a></li>
					<li><a href="/about" class="hover:text-primary">About</a></li>
					<li><a href="#features" class="hover:text-primary">Programs</a></li>
					<li><a href="#team" class="hover:text-primary">Team</a></li>
					<li><a href="#contact" class="hover:text-primary">Contact</a></li>
				</ul>
			</div>			<div class="navbar-end">
				<!-- Theme Controller -->				<label class="swap swap-rotate mr-4">
					<input type="checkbox" class="theme-controller" value="dark" />
					<!-- sun icon -->
					<i class="bi bi-sun swap-off text-2xl"></i>
					<!-- moon icon -->
					<i class="bi bi-moon swap-on text-2xl"></i>
				</label>
				<a href="#contact" class="btn btn-primary">Join Us</a>
			</div>
		</div>

		<!-- Main Content -->
		<main>
			<slot />
		</main>
		<!-- Footer -->
		<footer class="footer footer-center p-10 bg-neutral text-neutral-content">
			<aside>
				<div class="flex items-center justify-center mb-4">
					<img src="/Blast Robotics-2-Logo White Square.png" alt="Blast Robotics Logo" class="h-12 w-12 mr-3" />
					<div class="text-2xl font-bold">Blast Robotics</div>
				</div>
				<p class="font-bold">
					FRC Community Team serving Mainline Pennsylvania
				</p> 
				<p>Copyright Â© 2025 - Blast Robotics Team. All rights reserved.</p>
			</aside>			<nav>
				<div class="grid grid-flow-col gap-4">
					<a href="https://instagram.com/10989blast" target="_blank" rel="noopener noreferrer" class="hover:text-primary cursor-pointer" aria-label="Follow us on Instagram">
						<i class="bi bi-instagram text-2xl"></i>
					</a>
					<a href="mailto:info@team10989.org" class="hover:text-primary cursor-pointer" aria-label="Email us">
						<i class="bi bi-envelope text-2xl"></i>
					</a>
				</div>
			</nav>
		</footer>
	</body>
</html>
